@model Application.ViewModels.ListViewModels
@{
    bool isCreated = Model.Pokemones.ID == 0 ? false : true;
    ViewData["Title"] = "SavePokemon";
}


<div class="container-fluid mt-4">
    <div class="row col-6 offset-3">
        <div class="card mt-3">
            <h3 class="card-title mt-3 text-center">@(isCreated ? $"Editando a { Model.Pokemones.Nombre }"   : "Creando nuevo pokemon" )</h3>

            <div class="card-body">
                <form method="post" asp-controller="Pokemon" asp-action="@(isCreated ? "Edit" : "Create")">

                    <input type="hidden" asp-for="Pokemones.ID"  name="Pokemones.ID" />
                    <span asp-validation-for="Pokemones.Nombre" class="text-danger"></span>
                    <div class="mb-3">
                        <label asp-for="Pokemones.Nombre" class="form-label">Ingrese el nombre del pokemon</label>
                        <input asp-for="Pokemones.Nombre" name="Pokemones.Nombre" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="Pokemones.ImagenUrl" class="text-danger"></span>
                    <div class="mb-3">
                        <label asp-for="Pokemones.ImagenUrl" class="form-label">Agregue una imagen</label>
                        <input asp-for="Pokemones.ImagenUrl" name="Pokemones.ImagenUrl" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="Pokemones.Region" class="text-danger"></span>
                    <div class="mb-3">
                        <select asp-for="Pokemones.Region" name="Pokemones.Region" type="text" class="form-select">
                            <option value="" selected>Selecciona la region del pokemon</option>
                            @foreach (var item in Model.Regiones)
                            {
                                <option value="@item.ID">@item.Nombre</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="Pokemones.TipoPrimario" class="text-danger"></span>
                    <div class="mb-3">
                        <select asp-for="Pokemones.TipoPrimario" name="Pokemones.TipoPrimario" type="text" class="form-select">
                            <option value="" selected>Selecciona el tipo principal del pokemon</option>
                            @foreach (var tipo in Model.Tipos)
                            {
                                <option value="@tipo.ID">@tipo.Nombre</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="Pokemones.TipoSecundario" class="text-danger"></span>
                    <div class="mb-3">
                        <select asp-for="Pokemones.TipoSecundario" name="Pokemones.TipoSecundario" type="text" class="form-select">
                            <option value="" selected>Selecciona el tipo secundario del pokemon</option>
                            @foreach (var tipo2 in Model.Tipos)
                            {
                                <option value="@tipo2.ID">@tipo2.Nombre</option>

                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Pokemon" asp-action="Index" class="btn btn-warning">Volver</a>

                </form>
            </div>
        </div>
    </div>
</div>