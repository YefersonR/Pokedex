@model Application.ViewModels.SavePokemonViewModel
@{
    ViewData["Title"] = "DeletePokemon";
    Layout = "_Delete";

}
<div class="card-header">
    <h4>¿Está seguro que quiere eliminar a @Model.Nombre ?</h4>
</div>
<div class="card-body">
    <form method="post" asp-controller="Pokemon" asp-action="DeletePost">
        <input type="hidden" asp-for="ID" />

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Pokemon" asp-action="Index" class="btn btn-warning">Cancelar</a>

    </form>
</div>
