<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pokedex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark p-md-3">
            <div class="container-fluid w-100  d-flex">
                <div>

                    <a class="navbar-brand text-black-50 d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Pok%C3%A9_Ball_icon.svg/1026px-Pok%C3%A9_Ball_icon.svg.png" alt="" width="30" height="24" class="d-inline-block align-text">
                        <p class="m-0 fs-5">Pokedex</p>
                    </a>

                    <button class="navbar-toggler m-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse d-flex flex-row-reverse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active text-black-50" aria-current="page" asp-controller="Pokemon" asp-action="Index">Pokemones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black-50" asp-controller="Region" asp-action="Index">Regiones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black-50" asp-controller="Tipo" asp-action="Index"> Tipos</a>
                        </li>
                    </ul>
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
